<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student" class="com.javalec.ex.Student">
		<!-- 	student.setAge(20) -->
		<property name="age">
			<value>20</value>		
		</property>
		<!-- 	student.setName("홍길동") -->
		<property name="name">
			<value>홍길동</value>		
		</property>
		<property name="grade">
			<ref bean="grade"/> 	
		</property>
	</bean>
	
		<bean id="grade2" class="com.javalec.ex.Grade">
			<property name="kor">
				<value>90</value>
			</property>
			<property name="eng">
				<value>70</value>
			</property>
			<property name="math">
				<value>80</value>
			</property>
		</bean>
	
		<bean id="student2" class="com.javalec.ex.Student">
		<!-- 	student.setAge(20) -->
		<property name="age">
			<value>10</value>		
		</property>
		<!-- 	student.setName("홍길동") -->
		<property name="name">
			<value>홍길순</value>		
		</property>
		<property name="grade">
			<ref bean="grade2"/> 	
		</property>
	
	</bean>
	
		<bean id="student3" class="com.javalec.ex.Student">
	
		<property name="age">
			<value>21</value>		
		</property>

		<property name="name">
			<value>바둑이</value>		
		</property>
		
		<property name="hobbys">
			<list>
				<value> 수영</value>
				<value> 독서</value>
			</list>	
		</property>
	</bean>
	
		<bean id="grade" class="com.javalec.ex.Grade">
			<property name="kor">
				<value>90</value>
		</property>
	</bean>
	
	
	

</beans>
